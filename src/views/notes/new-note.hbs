{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>New Note</h3>
    </div>
    <div class="card-body">
       <form action="/notes/new-note" method="POST">
        <div class="input-group mb-3">
            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
        </div>
        <div class="input-group mb-3">
           <textarea name="description" id="description" cols="30" rows="10" class="form-control" placeholder="Description"></textarea>
        </div>
        <div class="d-grid gap-2 mb-3">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>
       </form>
    </div>
</div>
</div>