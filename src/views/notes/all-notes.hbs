<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i> </a>
                </h4>
                <p class="card-text">{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <div class="d-grid gap-2">
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body ">
                <p class="lead text-center">There aren't notes yet.</p>
                <div class="d-grid gap-2">
                <a href="/notes/add" class="btn btn-success ">Create One</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>