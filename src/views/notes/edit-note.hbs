<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
            </div>
            <div class="card-body">
                <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="title" value="{{note.title}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control text-start"  cols="30" rows="10">{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <div class="d-grid grap-2">
                            <button class="btn btn-primary" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        
    </div>
</div>